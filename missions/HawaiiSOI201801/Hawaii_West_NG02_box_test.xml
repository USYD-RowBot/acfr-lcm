<?xml version="1.0" standalone="no" ?>
<mission>
    
    <desc>
        This is a test mission
    </desc>
    <global>
        <location lat="19.9164" lon="-155.9193" />
        <turn_radius m='10' />
        <drop_distance m="4" />
        <drop_angle deg="25" />
        <mission_timeout t = "1"/>
        <!-- Mission timeout not implemented. To have the same drop distance in the corners use drop_angle [rad] = drop_distance / turn_radius -->
    </global>

    <primitive>
        <goto>
            <position x="0" y="1000" z="0.0"/>
            <heading deg="0" />
            <timeout t="300" />
            <velocity x="2.0" />
            <depth mode = "depth" />
            <command device="camera" onoff="start"/>
        </goto>
    </primitive>
    <primitive>
        <goto>
            <position x="100" y="1000" z="0.0"/>
            <heading deg="270" />
            <timeout t="200" />
            <velocity x="2.0" />
            <depth mode = "depth" />
        </goto>
    </primitive>
    <primitive>
        <goto>
            <position x="100" y="900" z="0.0"/>
            <heading deg="180" />
            <timeout t="200" />
            <velocity x="2.0" />
            <depth mode = "depth" />
        </goto>
    </primitive>
   <primitive>
        <goto>
            <position x="0" y="900" z="0.0"/>
            <heading deg="90" />
            <timeout t="200" />
            <velocity x="2.0" />
            <depth mode = "depth" />
            <command device="camera" onoff="stop"/>
        </goto>
    </primitive>
   <primitive>
        <goto>
            <position x="0" y="1000" z="0.0"/>
            <heading deg="00" />
            <timeout t="200" />
            <velocity x="2.0" />
            <depth mode = "depth" />
            <command device="camera" onoff="stop"/>
        </goto>
    </primitive>
</mission>
