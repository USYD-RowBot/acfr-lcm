    </primitive>
    <primitive>
        <goto>
            <position x="500" y="-80" z="0.0"/>
            <heading deg="180" />
            <timeout t="300" />
            <velocity x="1.0" />
            <depth mode = "depth" />
        </goto>
    </primitive>
   <primitive>
        <goto>
            <position x="0" y="-80" z="0.0"/>
            <heading deg="180" />
