<?xml version="1.0" standalone="no" ?>
<mission>
    <location lat="0.000" lon="0.000" />
    <desc>
        This is a test mission
    </desc>
    <global>
        <turn_radius m='5' />
        <drop_distance m="4" />
        <drop_angle rad="0.7" />
        <mission_timeout t = "1"/>
        <!-- Mission timeout not implemented. To have the same drop distance in the corners use drop_angle [rad] = drop_distance / turn_radius -->
    </global>
    
        
    <primitive>
        <goto>
            <position x="585" y="-1375" z="0.5"/>
            <heading deg="135"/>
            <timeout t="300" />
            <velocity x="1.0" />
            <depth mode = "depth" />
            <command device="camera" onoff="start"/>
        </goto>
    </primitive>
    <primitive>
        <inwardspiral>
            <position x="600" y="-1331" z="0.5"/>
            <heading deg="135" />
            <spacing m="1" />
            <length m="50" />
            <width m="75" />
            <timeout t="28800" />
            <velocity x="1.0" />
            <direction d="ccw" />
            <pitch deg="0" />
            <depth mode="depth" />
            <command device="camera" onoff="start"/>
        </inwardspiral>
    </primitive>
</mission>
