<?xml version="1.0" standalone="no" ?>
<mission>
    <location lat="0.000" lon="0.000" />
    <desc>
        This is a test mission
    </desc>
    <global>
        <turn_radius m='5' />
        <drop_distance m="4" />
        <drop_angle rad="0.7" />
        <mission_timeout t = "1"/>
        <!-- Mission timeout not implemented. To have the same drop distance in the corners use drop_angle [rad] = drop_distance / turn_radius -->
    </global>
    
        
    <primitive>
        <goto>
            <position x="0" y="0" z="0.75"/>
            <heading deg="90" />
            <timeout t="3000" />
            <velocity x="1.0" />
            <depth mode = "depth" />
            <command device="camera" onoff="start"/>
        </goto>
    </primitive>
    <primitive>
        <goto>
            <position x="0" y="100" z="2.5"/>
            <heading deg="90" />
            <timeout t="3000" />
            <velocity x="1.0" />
            <depth mode = "altitude" />
            <command device="camera" onoff="start"/>
        </goto>
    </primitive>
    <primitive>
        <goto>
            <position x="30" y="50" z="0.75"/>
            <heading deg="270" />
            <timeout t="3000" />
            <velocity x="1.0" />
            <depth mode = "depth" />
            <command device="camera" onoff="start"/>
        </goto>
    </primitive>
    <primitive>
        <goto>
            <position x="0" y="0" z="0.75"/>
            <heading deg="90" />
            <timeout t="3000" />
            <velocity x="1.0" />
            <depth mode = "depth" />
            <command device="camera" onoff="start"/>
        </goto>
    </primitive>
</mission>
