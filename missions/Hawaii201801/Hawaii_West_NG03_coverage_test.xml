<?xml version="1.0" standalone="no" ?>
<mission>
	<desc>
		NGA sim test mission
	</desc>
	<global>
		<location lat="19.9164" lon="-155.9193" />
		<turn_radius m="20.0" /> <!-- make sure this is the same as the nga.cfg turn radius -->
		<drop_distance m="4" />
		<drop_angle deg="40" />
